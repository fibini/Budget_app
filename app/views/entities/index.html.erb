<p style="color: green"><%= notice %></p>
<button><%= link_to "Back to home", groups_path %></button>

<h1>Transactions</h1>
<%sum = 0%>
<div id="entities">
  <table class= 'group-table'>
    <tr>
      <th>Name</th>
      <th>Amount</th>
    </tr>
    <% @entities.each do |entity| %>
      <%= render entity %>
      <%sum += entity.amount%>
    <% end %>
  </table>
</div>
<h3>Total Spent: $<%=sum%></h3>
<div class= 'new-category'>
<%= link_to "New transaction", new_group_entity_path %>
</div>