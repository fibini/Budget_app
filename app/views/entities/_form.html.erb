<%@categories = [{
  title: 'Food',
  icon: 'https://cdn-icons-png.flaticon.com/512/2819/2819194.png'
}] %>

<%= form_with model: entity, url: group_entities_path, method: :post, local: true, scope: :entity do |form| %>
  <% if entity.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(entity.errors.count, "error") %> prohibited this entity from being saved:</h2>

      <ul>
        <% entity.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
        <%# <%= form.select :group_id, current_user.groups.collect {|group| [@categories, group.id]}, {include_blank: false}, class:"form-select", id:"groupSelect" %> 
        <%@categories.each do |cat|%>
        <li>
          <input type= "radio" name= "icon" value= <%=cat[:icon]%>>
          <label for= <%=cat[:title]%>>
          <img src= <%=cat[:icon]%> alt= <%=cat[:title]%>>
        </li>
        <%end%>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.number_field :amount %>
  </div>

  <div class= "save-button">
    <%= form.submit "Save" %>
  </div>
<% end %>
