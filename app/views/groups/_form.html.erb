<%@categories = [
  {
  title: 'Food',
  icon: 'https://cdn-icons-png.flaticon.com/512/2819/2819194.png'
  },
  {
    title: 'Clothes',
    icon: 'https://cdn-icons-png.flaticon.com/512/3531/3531818.png'
  },
  {
    title: 'Utilities',
    icon: 'https://thumbs.dreamstime.com/z/set-utilities-icons-symbols-power-water-gas-heating-vector-illustration-your-design-set-utilities-icons-symbols-140696633.jpg'
  }
] %>

<%= form_with(model: group) do |form| %>
  <% if group.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class= "icons-list">
    <%@categories.each do |cat|%>
        <li>
          <input type= "radio" name= "icon" value= <%=cat[:icon]%>>
          <label for= <%=cat[:title]%>>
          <img src= <%=cat[:icon]%> alt= <%=cat[:title]%>>
        </li>
        <%end%>
  </div>

  <div class= "save-button">
    <%= form.submit "Save" %>
  </div>
<% end %>
